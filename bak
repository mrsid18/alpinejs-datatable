    <title>Alpinejs Datatable</title>
    <link rel="stylesheet" href="./dist/app.css">
    <script src="//unpkg.com/alpinejs" defer></script>
    <script src="./app.js" defer></script>
</head>

<body class="max-w-screen-2xl py-10 mx-auto">
    <div class="flow-root" x-data="{
    columns: ['name', 'email', 'phone', 'company', 'city', 'state', 'country', 'zip'],
    rows: [
        {
            name: 'John Doe',
            email: 'johndo@gmail.com',
            phone: '1234567890',
            company: 'ABC Corp.',
            city: 'New York',
            state: 'New York',
            country: 'USA',
            zip: '10001'
        },
        {
            name: 'Alice Smith',
            email: 'alicesmith@gmail.com',
            phone: '9876543210',
            company: 'XYZ Ltd.',
            city: 'San Francisco',
            state: 'California',
            country: 'USA',
            zip: '94105'
        },
        {
            name: 'Bob Johnson',
            email: 'bjohnson@gmail.com',
            phone: '5551234567',
            company: 'DEF Inc.',
            city: 'Los Angeles',
            state: 'California',
            country: 'USA',
            zip: '90001'
        },
        {
            name: 'Bob Johnson',
            email: 'bjohnson@gmail.com',
            phone: '5551234567',
            company: 'DEF Inc.',
            city: 'Los Angeles',
            state: 'California',
            country: 'USA',
            zip: '90001'
        },
        {
            name: 'Eva Rodriguez',
            email: 'evarod@gmail.com',
            phone: '3335557777',
            company: 'GHI Corporation',
            city: 'Miami',
            state: 'Florida',
            country: 'USA',
            zip: '33101'
        },
        {
            name: 'Charlie Brown',
            email: 'cbrown@gmail.com',
            phone: '1112223333',
            company: 'JKL Enterprises',
            city: 'Chicago',
            state: 'Illinois',
            country: 'USA',
            zip: '60601'
        },
        {
            name: 'Grace Davis',
            email: 'gracedavis@gmail.com',
            phone: '7778889999',
            company: 'MNO Solutions',
            city: 'Seattle',
            state: 'Washington',
            country: 'USA',
            zip: '98101'
        }
    ],
    sortColumn: '',
    sortOrder: 'asc',
    search: '',
    pagination: {
        current: 1,
        perPage: 10,
        lastPage: 1,
        from: 0,
        to: 1,
        total: 1,
    },
    init() {
        this.pagination.total = this.rows.length
        this.pagination.lastPage = Math.ceil(this.rows.length / this.pagination.perPage)
        this.pagination.to = this.pagination.perPage
        if (this.columns.length === 0) {
            this.columns = Object.keys(this.rows[0])
        }
    },
    perPage(num) {
        this.pagination.perPage = num
        this.pagination.lastPage = Math.ceil(this.rows.length / this.pagination.perPage)
        this.showPage(1)
    },
    showPage(page) {
        if (page < 1 || page > this.pagination.lastPage) return;
        this.pagination.current = page
        this.pagination.from = (page - 1) * this.pagination.perPage
        this.pagination.to = page * this.pagination.perPage
        if (this.pagination.to > this.pagination.total) {
            this.pagination.to = this.pagination.total
        }
    },
    filteredRows() {
        if (this.search === '') {
            return this.rows.slice(this.pagination.from, this.pagination.to)
        }
        return this.rows.filter((row) => {
            return this.columns.some((column) => {
                return String(row[column]).toLowerCase().includes(this.search.toLowerCase())
            })
        }).slice(this.pagination.from, this.pagination.to)
    },
    sort(column) {
        if(this.sortColumn === column) {
            this.sortOrder = this.sortOrder === 'asc' ? 'desc' : 'asc'
        } else {
            this.sortOrder = 'asc'
        }
        this.sortColumn = column
        this.rows = this.rows.sort((a, b) => {
            let modifier = 1
            if (this.sortOrder === 'desc') modifier = -1
            if (a[this.sortColumn] < b[this.sortColumn]) return -1 * modifier
            if (a[this.sortColumn] > b[this.sortColumn]) return 1 * modifier
            return 0
        })
    }
}">
        <div class="flex items-center justify-end gap-4">
            <div>
                <select name="perPage" id="perPage"
                    class="block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6"
                    x-on:change="perPage($event.target.value)">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="25">25</option>
                </select>
            </div>
            <div>
                <input type="text"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"
                    placeholder="Search..." x-model="search" @input.debounce="filteredRows">
            </div>
        </div>
        <div class="overflow-x-auto mt-6 rounded-md bg-white shadow-md">
            <div class="inline-block min-w-full align-middle">
                <table class="min-w-full divide-y divide-gray-300 border border-gray-100">
                    <thead>
                        <tr>
                            <template x-for="column in columns" :key="column">
                                <th scope="col" class="p-4 text-left text-sm font-semibold text-gray-800">
                                    <a class="group inline-flex items-center gap-4" x-text="column"
                                        @click="sort(column)">
                                    </a>
                                </th>
                            </template>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 bg-white">
                        <template x-for="(row, index) in filteredRows" :key="index">
                            <tr :class="index % 2 ? 'bg-white' : 'bg-gray-100'">
                                <template x-for="column in columns" :key="column + index">
                                    <td class="p-4 text-sm font-medium text-gray-700" x-text="row[column]"></td>
                                </template>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="flex items-center justify-between border-t border-gray-200 py-3">
            <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        Showing
                        <span class="font-medium" x-text="pagination.from+1"></span>
                        to
                        <span class="font-medium" x-text="pagination.to"></span>
                        of
                        <span class="font-medium" x-text="pagination.total"></span>
                        results
                    </p>
                </div>
                <div>
                    <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                        <a @click="showPage(pagination.current - 1)"
                            class="cursor-pointer relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                            <span class="sr-only">Previous</span>
                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd"
                                    d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
                                    clip-rule="evenodd" />
                            </svg>
                        </a>
                        <template x-for="page in pagination.lastPage" :key="page">
                            <a @click="showPage(page)"
                                class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-100 focus:z-20 focus:outline-offset-0 cursor-pointer"
                                :class="page === pagination.current && 'bg-indigo-500 text-white hover:bg-indigo-600'"
                                x-text="page"></a>
                        </template>
                        <a class="cursor-pointer relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                            @click="showPage(pagination.current + 1)">
                            <span class="sr-only">Next</span>
                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd"
                                    d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                                    clip-rule="evenodd" />
                            </svg>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </div>

